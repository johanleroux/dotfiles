[settings]
throttle-ms = 100
throttle-limit = 5

[bar/top]
width = 100%
height = 32
background = #282c34
foreground = #abb2bf
spacing = 4
underline-size = 4
overline-size = 4
padding = 2
font-0 = Bitstream Vera Sans:pixelsize=9;2
font-1 = Fira Code:pixelsize=9;2
font-2 = Font Awesome 6 Free:pixelsize=9;2
font-3 = Font Awesome 6 Brands:pixelsize=9;2
dpi-x = 96
dpi-y = 96
enable-ipc = true
modules-left = bspwm xwindow
modules-center = 
modules-right = cpu memory battery wired-network wireless-network pulseaudio discord dunst day clock

[module/bspwm]
type = internal/bspwm
format = <label-state>
enable-click = false
enable-scroll =false
label-focused = %name%
label-focused-padding = 2
label-focused-background = #3e4452
label-focused-foreground = #abb2bf
label-focused-underline = #282c34
label-focused-overline = #282c34
label-occupied = %name%
label-occupied-padding = 2
label-occupied-background = #282c34
label-occupied-foreground = #abb2bf
label-occupied-underline = #282c34
label-occupied-overline = #282c34
label-urgent = %name%
label-urgent-padding = 2
label-empty = %name%
label-empty-padding = 2
label-empty-background= #282c34
label-empty-foreground = #5c6370
label-empty-underline = #282c34
label-empty-overline = #282c34

[module/xwindow]
type = internal/xwindow 
label = %{A3:bspc node -c:} %title:0:48:...% %{A}
label-padding = 2

[module/cpu]
type = internal/cpu
label = CPU %percentage%%
format-margin = 1
format-warn = <label>
format-warn-foreground = #e06c75
format-warn-margin = 1

[module/memory]
type = internal/memory
label = MEM %percentage_used%%
format-margin = 1
format-warn = <label>
format-warn-foreground = #e06c75
format-warn-margin = 1

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
format-volume-margin = 1
format-muted-margin = 1
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}
label-muted = VOL %percentage%%
label-muted-foreground = #e06c75

[module/wired-network]
type = internal/network
interface = enp3s0
format-connected-margin = 1
label-connected = Wired %netspeed% 
label-disconnected = 

[module/wireless-network]
type = internal/network
format-disconnected-foreground = #98c379
interface = wlan0
label-connected = %essid% %netspeed% 
label-disconnected = Disconnected
format-connected-margin = 1
format-disconnected-margin = 1

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
low-at = 15 
format-full = <label-charging>
format-charging = <label-charging>
format-discharging = <label-discharging>
format-low = <label-low>
label-charging = BAT %percentage%% ϟ
label-charging-margin = 1
label-discharging = BAT %percentage%%
label-discharging-margin = 1
label-low = BAT %percentage%%
label-low-margin = 1
label-low-foreground = #e06c75

[module/discord]
format-padding = 2
format-foreground = #e06c75
type = custom/script
exec = ~/.config/polybar/discord.sh
click-left = echo 0 > ~/.config/dunst/discord_notifs.txt
interval = 1

[module/dunst]
type = custom/ipc
initial = 1
format-margin = 2 
hook-0 = echo "%{A1:dunstctl set-paused true && polybar-msg hook dunst 2:} %{A}" &
hook-1 = echo "%{A1:dunstctl set-paused false && polybar-msg hook dunst 1:} %{A}" &


[module/day]
type = internal/date
time = %a %e
format = <label>
label = %time%
label-margin = 2
format-background = #3e4452
format-overline = #282c34
format-underline = #282c34

[module/clock]
type = internal/date
time = %H:%M
format = <label>
label = %time%
label-margin = 2
format-background = #98c379
format-foreground = #282c34
format-overline = #282c34
format-underline = #282c34
